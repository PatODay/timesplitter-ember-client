{{#if task.is_completed}}
<p>Task: {{task.name}}</p>
  {{else}}
{{#if editing}}
  {{task-input task=task submit="submit"}}
{{else}}
<div {{action "edit"}}>
<p>Name: {{task.name}}</p>
<p>Date: {{task.date}}</p>
<p>Category: {{task.category}}</p>
<p>Location: {{task.location}}</p>
<p>Description: {{task.description}}</p>
<p>ID: {{task.id}}</p>
<button class='btn-xs btn-danger' {{action 'deleteTask'}}>Delete</button>
</div>
{{/if}}
{{/if}}
<div class="is-completed">
  <label>Is this task done?</label>
  <input type="checkbox" {{action 'toggleTaskDone'}}>
</div>
